// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "selenium-scrapper-quickstarter",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	"postCreateCommand": "git clone --depth=1 https://github.com/Ismola/personal-copilot-instructions tmp-copilot-instructions && mkdir -p .github && rm -rf .github/instructions && mv tmp-copilot-instructions/.github/instructions .github/ && rm -rf tmp-copilot-instructions && pip install -r requirements.txt && apt-get update && apt-get install -y wget && wget -q https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb && apt-get install -y ./google-chrome-stable_current_amd64.deb && rm google-chrome-stable_current_amd64.deb && apt-get install -y firefox-esr && apt-get clean",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.autopep8",
				"donjayamanne.python-extension-pack",
				"ismola.ismola-extension-pack",
				"github.vscode-github-actions"
			],
			"settings": {
				"python.terminal.activateEnvInCurrentTerminal": false,
				"python.defaultInterpreterPath": "/usr/local/bin/python"
			}
		}
	},
	"remoteUser": "root",
	"hostRequirements": {
		"cpus": 2,
		"memory": "8gb",
		"storage": "32gb"
	},
	"appPort": 3000,
	// TODO: cambiar el nombre del contenedor y puerto
	"runArgs": [
		"--name",
		"selenium-scrapper-quickstarter",
		"--env",
		"TZ=Europe/Madrid"
	]
}