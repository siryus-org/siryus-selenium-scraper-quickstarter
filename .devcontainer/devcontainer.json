// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "siryus-selenium-scrapper-quickstarter",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"enableNonRootDocker": "true",
			"moby": "true"
		},
		"ghcr.io/devcontainers/features/python:1": {
			"version": "latest"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.autopep8",
				"donjayamanne.python-extension-pack",
				"ismola.ismola-extension-pack",
				"github.vscode-github-actions"
			],
			"settings": {
				"python.terminal.activateEnvInCurrentTerminal": false,
				"python.defaultInterpreterPath": "/usr/local/python/current/bin/python3"
			}
		}
	},
	"remoteUser": "root",
	"hostRequirements": {
		"cpus": 2,
		"memory": "8gb",
		"storage": "32gb"
	},
	"postCreateCommand": "pip install -r requirements.txt && apt-get update && apt-get install -y wget && wget -q https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb && apt-get install -y ./google-chrome-stable_current_amd64.deb && rm google-chrome-stable_current_amd64.deb && apt-get install -y firefox-esr && apt-get clean",
	// TODO: cambiar el nombre del contenedor y puerto
	// "appPort": "3010:3000",
	"runArgs": [
		"--name",
		"selenium-scrapper-quickstarter",
		"--env",
		"TZ=Europe/Madrid"
		// ,"--network",
		// "sample-network"
	]
}