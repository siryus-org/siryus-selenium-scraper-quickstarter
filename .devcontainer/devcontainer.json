// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "siryus-scrapper-quickstarter",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	"postCreateCommand": "python3 -m venv .venv && bash -c 'source .venv/bin/activate && pip install -r requirements.txt' && apt-get update && apt-get install -y wget && wget -q https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb && apt-get install -y ./google-chrome-stable_current_amd64.deb && rm google-chrome-stable_current_amd64.deb && apt-get clean",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.autopep8",
				"donjayamanne.python-extension-pack",
				"vivaxy.vscode-conventional-commits",
				"oderwat.indent-rainbow",
				"Gruntfuggly.todo-tree",
				"mikestead.dotenv"
			],
			"settings": {
				"python.terminal.activateEnvInCurrentTerminal": true,
				"python.defaultInterpreterPath": ".venv/bin/python"
			}
		}
	},
	"remoteUser": "root",
	"hostRequirements": {
		"cpus": 2,
		"memory": "8gb",
		"storage": "32gb"
	}
}